#include <stdio.h>
int main() {
    int x[50];
    int i,n;
    int posi=0, zero=0,negi=0;
    printf("enter the numbers : ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&x[i]);
        if(x[i]>0)
        posi++;
        else if(x[i]<0)
        negi++;
        else
        zero++;
    }
    printf("you enter %d positive no., %d negitive no. and %d zero ",posi,negi,zero);
    return 0;
    

}
